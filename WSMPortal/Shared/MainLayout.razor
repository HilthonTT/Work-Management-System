@inherits LayoutComponentBase

<PageTitle>WSMPortal</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    @context.User.FindFirst(ClaimTypes.Name).Value
                </Authorized>
                <NotAuthorized>
                    <p>You aren't logged in.</p>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
