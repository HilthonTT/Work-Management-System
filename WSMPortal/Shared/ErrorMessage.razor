@inject NavigationManager navManager
@inject PageHistoryState PageHistoryState

<div class="row justify-content-center">
    <div class="col-xl-8 col-lg-10 form-layout">
        <div class="row">
            <div class="col-11 text-center">
                <div class="fw-bold mb-2 fs-5 text-uppercase">404 Not Found</div>
                <span class="fw-bold mt-2">Oops the page not found.</span>
                <div class="mt-5 center-children error-message-text">
                    Sorry but the requested page is not found.
                </div>
            </div>
            <div class="col-1 close-button-section">
                <button class="btn btn-close" @onclick="ClosePage"></button>
            </div>
        </div>
    </div>
</div>

