@page "/userDetails/{Id}"
@inject IUserEndpoint userEndpoint
@inject IDepartmentEndpoint departmentEndpoint
@inject IJobTitleEndpoint jobEndpoint
@inject NavigationManager navManager
@attribute [Authorize]

<h1 class="page-heading text-uppercase mb-4">User Details</h1>

<div class="row justify-content-center detail-form">
    <div class="col-md-12 col-xl-12">
        @if (user is not null)
        {
            <div class="row form-layout mt-4 tasks-background">
                <div class="col-11">
                    <div class="form-layout mb-2">
                       <div class="text-center fw-bold text-uppercase">Full Name</div>
                       <div class="text-center">@user.FullName</div>
                    </div>
                    <div class="form-layout mb-2">
                       <div class="text-center fw-bold text-uppercase">Email Address</div>
                       <div class="text-center">@user.EmailAddress</div>
                    </div>
                    <div class="form-layout mb-2">
                       <div class="text-center fw-bold text-uppercase">Phone Number</div>
                       <div class="text-center">@user.PhoneNumber</div>
                    </div>
                    <div class="form-layout mb-2">
                       <div class="text-center fw-bold text-uppercase">Date Of Birth</div>
                       <div class="text-center">@user.DateOfBirth.ToString("dd/MM/yyyy")</div>
                    </div>
                    <div class="form-layout mb-2">
                       <div class="text-center fw-bold text-uppercase">Department</div>
                       <div class="text-center">@GetDepartmentName()</div>
                    </div>
                    <div class="form-layout mb-2">
                       <div class="text-center fw-bold text-uppercase">Job Title</div>
                       <div class="text-center">@GetJobName()</div>
                    </div>
                    <div class="form-layout mb-2">
                       <div class="text-center fw-bold text-uppercase">Roles</div>
                       <div class="text-center">@user.RoleList</div>
                    </div>
                    <div class="form-layout mb-2">
                       <div class="text-center fw-bold text-uppercase">Created Date</div>
                       <div class="text-center">@user.CreatedDate.ToString("dd/MM/yyyy")</div>
                    </div>
                </div>
                <div class="col-1 close-button-section">
                    <button class="btn btn-close" @onclick="ClosePage"></button>
                </div>
            </div>
        }
        else
        {
            <ErrorMessage />
        }
    </div>
</div>

